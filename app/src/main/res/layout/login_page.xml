<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img1"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">


        <TextView
            android:id="@+id/cLogin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Donor LogIn"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Cemail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/textviewbg"
            android:backgroundTint="#F6F7FA"
            android:drawableLeft="@drawable/ic_login_email_24"
            android:ems="20"
            android:hint="Email:"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:padding="@dimen/_10sdp"
            android:shadowColor="#FBFBFB"
            android:textColor="#0A0B0B"
            android:textColorHighlight="#090909"
            android:textColorHint="@color/black"
            android:textColorLink="#FAF3F3"
            android:textStyle="normal|bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:passwordToggleEnabled="true"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="238dp">

            <EditText
                android:id="@+id/cpassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewbg"
                android:backgroundTint="#F4F4F6"
                android:drawableLeft="@drawable/ic_password"
                android:ems="50"
                android:fontFamily="@font/roboto"
                android:hint="Password:"
                android:inputType="textPassword"
                android:padding="@dimen/_8sdp"
                android:textColor="#0F0F10"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">
            \

            <CheckBox
                android:id="@+id/r4"
                android:layout_width="160dp"
                android:layout_height="38dp"

                android:text="Remember me"
                android:textColor="@color/design_default_color_on_secondary"

                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/btnLogin2"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/inpuut_bg"
            android:text="Login"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/design_default_color_error"
            app:layout_constraintEnd_toEndOf="@+id/checkBoxp"
            app:layout_constraintStart_toStartOf="@+id/remember2"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxp"
            app:rippleColor="@color/teal_200" />


        <ProgressBar
            android:id="@+id/cprogressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/cregister2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"

            android:text="Don't have an Account?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/forgotPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>